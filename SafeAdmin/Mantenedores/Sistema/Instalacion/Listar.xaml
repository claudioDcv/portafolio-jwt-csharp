<Window x:Class="SafeAdmin.Mantenedores.Sistema.Instalacion.Listar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeAdmin.Mantenedores.Sistema.Instalacion"
        mc:Ignorable="d"
        Title="Listar" Height="471.992" Width="867.669">
    <Grid>
        <DataGrid Name="grdInstalaciones" ItemsSource="{Binding Source=oInstalaciones}" HorizontalAlignment="Left" Height="286" Margin="157,145,0,0" VerticalAlignment="Top" Width="587" AutoGenerateColumns="False" SelectionChanged="grdInstalaciones_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Visibility="Collapsed" Binding="{Binding id}"/>
                <DataGridTextColumn Header="IDEmpresa" Visibility="Collapsed" Binding="{Binding empresaEntity.id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}"/>
                <DataGridTextColumn Header="Código" Binding="{Binding codigo}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnCrear" Content="Crear Nuevo" HorizontalAlignment="Left" Margin="157,120,0,0" VerticalAlignment="Top" Width="75" Click="btnCrear_Click" Foreground="White" Background="#17A2B8"/>

    </Grid>
</Window>
